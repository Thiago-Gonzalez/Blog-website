<%- include("partials/header"); -%>


<h1>Home</h1>
<p><%= startingContent %></p>


<% posts.forEach(function(post) { %>
  <h1><%= post.title %></h1>

  <p>
    <% if (post.content.length > 300) { %>
      <% for (let i=300; i<post.content.length; i++) { %>
        <% if (post.content[i] == ".") { %>
          <%= post.content.substring(0, i+1) %>
          <% break; %>
        <% } %>
      <% } %>
      <a href="/posts/<%= post._id %>">Read More...</a>
    <% }  else { %>
      <%= post.content %>
    <% } %>
  </p>
<% }); %>


<%- include("partials/footer"); -%>
